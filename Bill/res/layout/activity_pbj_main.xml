<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:background="#16D0AE"
		android:orientation="vertical" >
		<LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<ImageButton 
				android:onClick="exit"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@null"
				android:src="@drawable/turn"/>

			<TextView
				android:layout_marginTop="5dp"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="95dp"
				android:text="个人账本"
				android:textColor="#FFF"
				android:textSize="18sp" />
			<ImageButton 
				android:onClick="search"
				android:layout_marginTop="5dp"
				android:layout_marginRight="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@null"
				android:src="@drawable/abc_ic_search"/>

		</LinearLayout>

		

		<TextView
			android:id="@+id/tv_rest"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="15dp"
			android:text="1000"
			android:textColor="#FFF"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/tv_month1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="8月剩余金额"
			android:textColor="#FFF"
			android:textSize="10sp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:gravity="center_horizontal" >

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="20dp"
				android:gravity="center_horizontal"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/tv_income"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="100"
					android:textColor="#FFF" />

				<TextView
					android:id="@+id/tv_month2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="8月收入"
					android:textColor="#FFF"
					android:textSize="10sp" />
			</LinearLayout>

			<TextView
				android:layout_width="1dp"
				android:layout_height="40dp"
				android:background="@drawable/tv_bg_shape" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:gravity="center_horizontal"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/tv_payout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="100"
					android:textColor="#FFF" />

				<TextView
					android:id="@+id/tv_month3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="8月支出"
					android:textColor="#FFF"
					android:textSize="10sp" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
	<ListView 
		android:id="@+id/lv"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>
	<LinearLayout 
		android:gravity="center_horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/control_bg_shape">
		<ImageButton
			android:onClick="add"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:background="@null"
			
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/cost_save" />
	</LinearLayout>
	
		


</LinearLayout>