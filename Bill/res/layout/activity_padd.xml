<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout 
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageButton 
			android:onClick="cancel"
			android:layout_marginTop="5dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@null"
	android:src="@drawable/icon_cancel_black"/>
		<RadioGroup 
			android:id="@+id/rg"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<RadioButton 
				android:id="@+id/rb1"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:button="@null"
				android:background="@drawable/income_selector"
				android:checked="true"
				android:textColor="#FFF"
				android:text="收入"/>
			<RadioButton 
				android:id="@+id/rb2"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:button="@null"
				android:textColor="#F49B13"
				android:background="@drawable/income_selector"
				android:text="支出"/>
		</RadioGroup>
		<ImageButton 
			android:onClick="save"
			android:layout_marginTop="5dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@null"
	android:src="@drawable/icon_complete_black"/>
	</LinearLayout>
	<TextView 
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@drawable/tv_line_bg"/>
	<LinearLayout 
		android:layout_margin="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView 
			android:id="@+id/img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/gz"/>
		<TextView
			android:id="@+id/tv_type" 
			android:layout_marginLeft="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:layout_gravity="center_vertical"
			android:text="工资"/>
		<EditText 
			android:id="@+id/et_money"
			android:layout_marginLeft="10dp"
			android:gravity="right|center_vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textSize="25sp"
			android:background="@drawable/et_bg_shape"
			android:hint="0.00"/>
	</LinearLayout>
<TextView 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@drawable/tv_line_bg"/>
<FrameLayout 
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="1">
	<GridView 
		android:layout_marginTop="20dp"
	android:id="@+id/gv1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:numColumns="5"/>
	<GridView 
		android:layout_marginTop="20dp"
	android:id="@+id/gv2"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="gone"
	android:numColumns="5"/>
</FrameLayout>


<LinearLayout 
	android:layout_width="match_parent"
	android:background="@drawable/group_book_normal"
	android:layout_height="115dp">
	<EditText 
		android:id="@+id/et_mk"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="left"
		android:hint="备注"
		/>
</LinearLayout>
	

</LinearLayout>